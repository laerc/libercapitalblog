
<div class="p-3 mb-2 bg-primary text-white">
  <div class="d-flex justify-content-between text-white">
    <h3>Edit Comment</h3>
  </div>
</div>

<div class="container-fluid">
	<%= form_with model: [ @article, @comment ] do |f| %>
	  <ul class="list-group">
	  <% @article.errors.full_messages.each do |error| %>
	    <li class="list-group-item" ><%= error %></li>
	  <% end %>
	  </ul>
	  <div class="form-group">
	    <%= f.label :author_name, class: "col-md-4 control-label" %><br />
	    <%= f.text_field :author_name, class: "form-control", :required => 'required' %>
	  </div>
	  <div class="form-group">
	    <%= f.label :body, class: "col-md-4 control-label" %><br />
	    <%= f.text_area :body, class: "form-control", :required => 'required', maxlength: 250 %>
	  </div>
	  <%= f.submit "Submit", class:"btn btn-default btn-primary" %>
	</ul>
	<% end %>
</div>
