<div class="p-3 mb-2 bg-primary text-white">
  <div class="d-flex justify-content-between text-white">
    <h3>Register</h3>
  </div>
</div>

<%= form_for(@user) do |f| %>
  <ul class="list-group">
  <% @user.errors.full_messages.each do |error| %>
    <li class="list-group-item" ><%= error %></li>
  <% end %>
  </ul>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %><br />
    <%= f.text_field :name, placeholder:"Name", class: "form-control", :required => 'required', :maxlength => 50, id:"text_fieldTitleNewArticle" %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-md-4 control-label" %><br />
    <%= f.text_field :email, type: "email", placeholder:"Email", class: "form-control", :required => 'required', maxlength: 50, id:"text_areaNewArticle" %>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-md-4 control-label" %><br />
    <%= f.text_field :password, type: "password", placeholder:"Password",class: "form-control", :required => 'required', maxlength: 50, id:"text_areaNewArticle" %>
  </div>
  <%= f.submit "Submit", class:"btn btn-default btn-primary", id:"submitNewPost" %>
<% end %>